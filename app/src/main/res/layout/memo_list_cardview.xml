<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:gravity="right"
                android:textSize="@dimen/date_size"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/textView_memo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/title_size"/>



            <ImageView
                android:id="@+id/imageView_memo_thumbnail"
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/imageview_shape"
                android:layout_below="@+id/textView_memo_title"/>


            <TextView
                android:layout_below="@+id/imageView_memo_thumbnail"
                android:id="@+id/textView_memo_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/contents_size"
                android:text="contents"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>